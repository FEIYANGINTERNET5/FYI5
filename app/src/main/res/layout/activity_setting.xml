<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/setting_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18.5dp"
            android:layout_marginTop="20.5dp"
            android:background="@drawable/back2">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="133.5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:text="功能设置"
            android:textColor="@color/login_title"
            android:textSize="18sp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:orientation="vertical"
        android:background="@drawable/setting_shape"
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginTop="23dp"
                android:text="智能求助开关"
                android:textColor="@color/login_title"
                android:textSize="18sp"></TextView>

            <ImageView
                android:id="@+id/iv_setting_first"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/open2"></ImageView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="开启后，满足设定条件时将自动发送求助短信"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:background="@drawable/setting_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="求助唤醒设置"
            android:textSize="18sp"
            android:textColor="@color/login_title"
            android:layout_marginTop="12dp"
            ></TextView>

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="语音唤醒"
                    android:textColor="@color/login_title"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="自定义特殊指令作为语音唤醒的触发键"
                    android:textSize="12sp"></TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_setting_two"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/open2"></ImageView>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/login_title"
                    android:text="快捷按键"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:textSize="12sp"
                    android:text="连续点击3次锁屏键后，唤醒呼救"
                    ></TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_setting_three"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/open2"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:textColor="@color/login_title"
                android:text="自动录音">
            </TextView>

            <ImageView
                android:id="@+id/iv_setting_four"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/open2"></ImageView>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="22dp"
        android:layout_marginTop="8dp"
        android:background="@color/setting_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="18sp"
            android:textColor="@color/login_title"
            android:text="紧急联系人设置"></TextView>

        <EditText
            android:id="@+id/et_setting_tel"
            android:layout_width="373dp"
            android:layout_height="40dp"
            android:background="@drawable/setting_shape"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:hint="请输入紧急联系人的手机号码"></EditText>


        <EditText
            android:id="@+id/et_setting_help_con"
            android:layout_marginTop="12dp"
            android:layout_width="373dp"
            android:layout_height="116dp"
            android:background="@drawable/shape"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:hint="请编辑智能求助紧急发送的内容"></EditText>

        <EditText
            android:id="@+id/et_setting_con"
            android:layout_marginTop="12dp"
            android:layout_width="373dp"
            android:layout_height="116dp"
            android:background="@drawable/shape"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:hint="请编辑电子围栏紧急发送的内容"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/bt_setting_save"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="保存"
        android:background="@color/setting_background"
        ></Button>

</LinearLayout>